<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="장르 수정"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:id="@+id/modify_plan_title_123"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/modify_plan_title_123"
        android:background="#E6E6E6"
        android:id="@+id/view7"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view7"
        android:textColor="#000000"
        android:textSize="12dp"
        android:layout_marginStart="11dp"
        android:text="장르 선택"
        android:id="@+id/txt_1"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/music_genre_spinner"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:spinnerMode="dropdown"
        android:background="@drawable/spinner_custom"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/confirm_modify_music_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/modify_music_genre_cancel"
        android:layout_alignBottom="@+id/modify_music_genre_cancel"
        android:layout_alignParentEnd="true"
        android:background="#00ff0000"
        android:text="수정"
        android:textColor="#00A1FF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/modify_music_genre_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/music_genre_spinner"
        android:layout_marginTop="13dp"
        android:layout_toStartOf="@+id/confirm_modify_music_genre"
        android:background="#00ff0000"
        android:text="취소"
        android:textColor="#00A1FF"
        android:textStyle="bold" />
</RelativeLayout>
